<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WateryTart.Core.ViewModels"
             xmlns:views="clr-namespace:WateryTart.Core.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:KeyboardVolumeKeyBindingsViewModel"
             x:Class="WateryTart.Core.Views.KeyboardVolumeKeyBindingsView">

  <ScrollViewer>
    <StackPanel Spacing="20">
      <!-- Header -->
      <StackPanel Spacing="8">
        <TextBlock Text="Keyboard Shortcuts" FontSize="24" FontWeight="Bold" />
        <TextBlock Text="Configure keyboard bindings for media controls" FontSize="12" />
      </StackPanel>

      <!-- Reset to Defaults Button -->
      <Button Command="{Binding ResetToDefaultsCommand}"
              Padding="12,8"
              HorizontalAlignment="Left">
        Reset to Defaults
      </Button>

      <!-- Recording Status -->
      <Border BorderThickness="1" 
              CornerRadius="4"
              Padding="12"
              IsVisible="{Binding IsRecording}">
        <TextBlock Text="Press any key to bind..." FontWeight="SemiBold" />
      </Border>

      <!-- Keyboard Bindings List -->
      <StackPanel Spacing="12">
        
        <!-- Play Binding -->
        <Border BorderThickness="1" CornerRadius="4" Padding="16">
          <Grid ColumnDefinitions="*,150">
            <StackPanel Grid.Column="0" Spacing="4">
              <TextBlock Text="Play" FontWeight="SemiBold" FontSize="14" />
              <TextBlock Text="Start playback" FontSize="11" />
            </StackPanel>
            <Button Grid.Column="1" 
                    Command="{Binding RecordKeyCommand}" 
                    CommandParameter="Play"
                    Padding="8">
              <TextBlock Text="{Binding PlayBinding}" />
            </Button>
          </Grid>
        </Border>

        <!-- Next Binding -->
        <Border BorderThickness="1" CornerRadius="4" Padding="16">
          <Grid ColumnDefinitions="*,150">
            <StackPanel Grid.Column="0" Spacing="4">
              <TextBlock Text="Next Track" FontWeight="SemiBold" FontSize="14" />
              <TextBlock Text="Skip to next song" FontSize="11" />
            </StackPanel>
            <Button Grid.Column="1" 
                    Command="{Binding RecordKeyCommand}" 
                    CommandParameter="Next"
                    Padding="8">
              <TextBlock Text="{Binding NextBinding}" />
            </Button>
          </Grid>
        </Border>

        <!-- Previous Binding -->
        <Border BorderThickness="1" CornerRadius="4" Padding="16">
          <Grid ColumnDefinitions="*,150">
            <StackPanel Grid.Column="0" Spacing="4">
              <TextBlock Text="Previous Track" FontWeight="SemiBold" FontSize="14" />
              <TextBlock Text="Skip to previous song" FontSize="11" />
            </StackPanel>
            <Button Grid.Column="1" 
                    Command="{Binding RecordKeyCommand}" 
                    CommandParameter="Previous"
                    Padding="8">
              <TextBlock Text="{Binding PreviousBinding}" />
            </Button>
          </Grid>
        </Border>

        <!-- Volume Up Binding -->
        <Border BorderThickness="1" CornerRadius="4" Padding="16">
          <Grid ColumnDefinitions="*,150">
            <StackPanel Grid.Column="0" Spacing="4">
              <TextBlock Text="Volume Up" FontWeight="SemiBold" FontSize="14" />
              <TextBlock Text="Increase volume" FontSize="11" />
            </StackPanel>
            <Button Grid.Column="1" 
                    Command="{Binding RecordKeyCommand}" 
                    CommandParameter="VolumeUp"
                    Padding="8">
              <TextBlock Text="{Binding VolumeUpBinding}" />
            </Button>
          </Grid>
        </Border>

        <!-- Volume Down Binding -->
        <Border BorderThickness="1" CornerRadius="4" Padding="16">
          <Grid ColumnDefinitions="*,150">
            <StackPanel Grid.Column="0" Spacing="4">
              <TextBlock Text="Volume Down" FontWeight="SemiBold" FontSize="14" />
              <TextBlock Text="Decrease volume" FontSize="11" />
            </StackPanel>
            <Button Grid.Column="1" 
                    Command="{Binding RecordKeyCommand}" 
                    CommandParameter="VolumeDown"
                    Padding="8">
              <TextBlock Text="{Binding VolumeDownBinding}" />
            </Button>
          </Grid>
        </Border>

        <!-- Mute Binding -->
        <Border BorderThickness="1" CornerRadius="4" Padding="16">
          <Grid ColumnDefinitions="*,150">
            <StackPanel Grid.Column="0" Spacing="4">
              <TextBlock Text="Mute" FontWeight="SemiBold" FontSize="14" />
              <TextBlock Text="Toggle mute" FontSize="11" />
            </StackPanel>
            <Button Grid.Column="1" 
                    Command="{Binding RecordKeyCommand}" 
                    CommandParameter="Mute"
                    Padding="8">
              <TextBlock Text="{Binding MuteBinding}" />
            </Button>
          </Grid>
        </Border>

      </StackPanel>

      <!-- Info -->
      <Border BorderThickness="1" CornerRadius="4" Padding="12">
        <TextBlock Text="Click a button above to set its keyboard shortcut, then press the key combination you want to use." 
                   FontSize="11"
                   TextWrapping="Wrap" />
      </Border>

    </StackPanel>
  </ScrollViewer>

</UserControl>  
