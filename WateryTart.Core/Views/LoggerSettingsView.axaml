<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="clr-namespace:WateryTart.Core.ViewModels"
			 xmlns:converters="clr-namespace:WateryTart.Core.Converters"
			 x:Class="WateryTart.Core.Views.LoggerSettingsView"
			 x:DataType="vm:LoggerSettingsViewModel">
	<UserControl.Resources>
		<converters:StringNullOrEmptyToBoolConverter x:Key="StringNullOrEmptyToBoolConverter" />
	</UserControl.Resources>
	<Grid>
		<StackPanel Spacing="20">
			<TextBlock FontSize="18" FontWeight="Bold" Text="Logging Settings" />

			<!-- Log Level Selection -->
			<StackPanel Spacing="8">
				<TextBlock Text="Log Level:" FontWeight="SemiBold" />
				<ComboBox ItemsSource="{Binding AvailableLogLevels}"
						  SelectedItem="{Binding SelectedLogLevel}" />
				<TextBlock Text="Controls the verbosity of logging output"
						   FontSize="12"
						   Opacity="0.7" />
			</StackPanel>

			<!-- File Logging Toggle -->
			<StackPanel Spacing="8">
				<CheckBox IsChecked="{Binding EnableFileLogging}"
						  Content="Enable file logging"
						  FontWeight="SemiBold" />
				<TextBlock Text="Write logs to a file for persistent storage"
						   FontSize="12"
						   Opacity="0.7"
						   IsVisible="{Binding !EnableFileLogging}" />
			</StackPanel>

			<!-- Log File Path -->
			<StackPanel Spacing="8" IsVisible="{Binding EnableFileLogging}">
				<TextBlock Text="Log File Path:" FontWeight="SemiBold" />
				<Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
					<TextBox Text="{Binding LogFilePath}" Grid.Column="0" />
					<Button Content="Browse"
							Command="{Binding BrowseLogFileCommand}"
							Grid.Column="1"
							Width="100" />
				</Grid>
				<Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
					<TextBlock Text="File Size:" FontWeight="SemiBold" />
					<TextBlock Text="{Binding LogFileSize}" Grid.Column="1" />
				</Grid>
				<Button Content="Open Log Folder"
						Command="{Binding OpenLogFolderCommand}"
						Width="150" />
			</StackPanel>

			<!-- Status Message -->
			<TextBlock Text="{Binding StatusMessage}"
					   Foreground="Green"
					   IsVisible="{Binding StatusMessage, Converter={StaticResource StringNullOrEmptyToBoolConverter}}"
					   FontSize="12" />

			<!-- Save Button -->
			<Button Content="Save Settings"
					Command="{Binding SaveSettingsCommand}"
					IsEnabled="{Binding !IsSaving}"
					Width="200"
					Margin="0,20,0,0" />
		</StackPanel>
	</Grid>
</UserControl>